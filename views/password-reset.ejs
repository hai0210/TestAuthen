<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">


    <title>OAuth2Server |
        <%= pageName %>
    </title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
        crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <!-- Custom styles for this template -->
</head>

<body>
    <main role="main" class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Reset password</h4>
                        <% if (message) { %>
                        <% if (!(message.success === undefined || message.success == 0)) { %>
                        <div class="alert alert-success text-center alert-dismissible fade show" role="alert">
                            <p><strong>Sucess: </strong>
                                <%= message.success %>
                            </p>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <% } %>
                        <% if(!(message.error === undefined || message.error == 0)) { %>
                        <div class="alert alert-danger text-center alert-dismissible fade show" role="alert">
                            <p><strong>Error: </strong>
                                <%= message.error %>
                            </p>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <% } %>
                        <% } %>
                        <p class="card-text text-muted">Enter your username (i.e example@domains.com), and a reset
                            password url will send direct to your email</p>
                        <form class="form-custom" action="/resetpassword" method="POST">
                            <div class="form-label-group">
                                <input type="email" id="inputEmail" name="username" class="form-control" placeholder="Enter your username"
                                    required>
                                <label class="form-lable" for="inputEmail">Username</label>
                            </div>
                            <div class="row justify-content-center">
                                <div class="form-label-group">
                                    <button type="submit" class="btn btn-block btn-primary">Reset password</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main><!-- /.container -->
    <footer>
        <% include partials/footer.ejs %>
    </footer>
</body>

</html>